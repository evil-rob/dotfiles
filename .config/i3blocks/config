# i3blocks configuration file for swaybar

# Global properties
separator_block_width=50

# Display window name
[window]
command=while swaymsg -t get_tree | jq -r '.. | select(type=="object" and .focused==true and (.type=="con" or .type=="floating_con")) | .name'; do sleep 0.1; done
interval=persist

# Weather widget
[weather]
command="$SCRIPTS/weather.sh"
interval=60
color=#87CEEB

# Network widget
[network]
command="$SCRIPTS/network.sh"
interval=5

# Battery indicator
[battery]
command="$SCRIPTS/battery.sh"
interval=30

# Clock
[time]
command=date '+%m/%d/%Y %I:%M:%S %p'
interval=1
